/* pages/detail.wxss */
page {
	background: #f0eff4
}
.header {
	background: #35a4de;
	text-align: center;
	color: #fff;
	padding: 30rpx 0;
	position: relative;
}
.title {
	font-size: 46rpx;
}
.expired {
	font-size: 28rpx;
	margin: 20rpx auto;
}
.setAddr {
	font-size: 28rpx;
	padding: 10rpx 30rpx;
	border-radius: 40rpx;
	background-color: rgba(0,0,0,.3);
}
.bg {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 8rpx;
}
.code {
	text-align: center;
	font-size: 36rpx;
	padding:40rpx 0;
	background-color: #fff;
}
.copy {
	padding: 10rpx 20rpx;
	background: #35a4de;
	margin-left: 20rpx;
	font-size: 32rpx;
	color: #fff;
	border-radius: 20rpx;
  
}
.tips {
	color: rgb(95, 95, 95);
	font-size: 28rpx;
	margin-top: 10rpx;
  padding: 0 20rpx;
}
.line {
	width: 100%;
	height: 20rpx;
	
}
.detail {
	padding: 30rpx;
	background-color: #fff;
}
.cardDetail {
	color:#000;
	font-size:32rpx;
	border-bottom:2rpx solid #d5d5d5;
	padding-bottom:10rpx;
}
.item {
	display: flex;
	font-size: 28rpx;
	margin-top: 20rpx;
}
.label {
	color: #666;
	width: 200rpx;
}
.btn {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background: #fff;
	padding: 10rpx 0;
}
.btnDetail {
	width: 690rpx;
	height: 80rpx;
	background-color: #06bb04;
	color: #fff;
	font-size: 32rpx;
}
.result {
	background:#fff;
	color:#000;
	padding:20rpx 80rpx;
	border-radius:20rpx;
	font-size:28rpx;
	text-align: center;
}
.result view{
	margin-bottom: 20rpx
}